{
  "name": "cordova-ui5-playground",
  "version": "1.0.0",
  "description": "Cordova project to run sample/test UI5 code in actual devices",
  "scripts": {
    "serve": "ui5 serve -o index.html",
    "build": "npm run prebuild-ui5 && npm run build-ui5 && npm run postbuild-ui5:transpile && npm run build-apk",
    "prebuild-ui5": "webpack",
    "build-ui5": "ui5 build self-contained --include-all-dependencies --dest ./build",
    "postbuild-ui5:transpile": "babel build --out-dir ./ui5_playground/www --delete-dir-on-start --copy-files",
    "build-apk": "cd ui5_playground && cordova build && cd -",
    "reset-cordova": "cd ui5_playground && cordova platform remove android && cordova platform add android && cd -",
    "clean-build": "rm -rf ./build ./ui5_playground/www/*",
    "clean": "npm run clean-build && rm -rf ./node_modules ./ui5_playground/node_modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pablopenna/cordova-ui5-playground.git"
  },
  "license": "ISC",
  "homepage": "https://github.com/pablopenna/cordova-ui5-playground#readme",
  "dependencies": {
    "@ui5/cli": "^4.0.36",
    "abortcontroller-polyfill": "^1.7.8",
    "cordova": "^13.0.0",
    "core-js": "^3.47.0",
    "whatwg-fetch": "^3.6.20"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  }
}
